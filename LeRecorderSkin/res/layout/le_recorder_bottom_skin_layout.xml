<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:layout_alignParentBottom="true"
    android:gravity="center_vertical"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="12dp"
    android:orientation="horizontal"
    >

    <ImageView
        android:id="@+id/imgV_open"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:scaleType="fitCenter"
        android:src="@drawable/letv_recorder_open" />

    <ImageView
        android:id="@+id/imgV_flashlight"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="10dp"
        android:scaleType="fitCenter"
        android:layout_height="wrap_content"
        android:src="@drawable/letv_recorder_flash_light_close" />

    <ImageView
        android:id="@+id/imgV_voice"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:scaleType="fitCenter"
        android:layout_height="wrap_content"
        android:src="@drawable/letv_recorder_voise_open" />

    <ImageView
        android:id="@+id/imgV_postposition_camera"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:scaleType="fitCenter"
        android:layout_height="wrap_content"
        android:src="@drawable/letv_recorder_postposition_camera" />

    <ImageView
        android:id="@+id/imgV_postposition_filter"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:scaleType="fitCenter"
        android:layout_height="wrap_content"
        android:src="@drawable/letv_recorder_postposition_filter" />
   <ImageView
       android:id="@+id/imgV_mirror"
       android:layout_width="0dp"
       android:layout_weight="1"
       android:scaleType="fitCenter"
       android:layout_height="wrap_content"
       android:src="@drawable/letv_recorder_mirror_open" />
    <View
        android:id="@+id/sdk_view"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="wrap_content"
        android:background="#00000000"/>
</LinearLayout>
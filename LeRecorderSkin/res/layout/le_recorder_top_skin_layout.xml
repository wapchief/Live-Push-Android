<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:layout_marginTop="12dp"
    android:layout_alignParentTop="true"
    android:gravity="center_vertical" >

    <ImageView
        android:id="@+id/imgB_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:src="@drawable/letv_recorder_arrow" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/imgB_back"
        android:ellipsize="end"
        android:maxEms="10"
        android:singleLine="true"
        android:text="室内瑜伽练习"
        android:textColor="#f6f6f6"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/tv_rec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="11dp"
        android:text="REC"
        android:textColor="#f6f6f6"
        android:textSize="14dp"/>

    <ImageView
        android:id="@+id/imgV_thumd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="7dp"
        android:layout_toLeftOf="@id/tv_rec"
        android:src="@drawable/letv_recorder_thumd"/>

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="7dp"
        android:layout_toLeftOf="@id/imgV_thumd"
        android:text="00:00:00"
        android:textColor="#f6f6f6"
        android:textSize="14dp"/>

</RelativeLayout>